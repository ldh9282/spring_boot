<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <!-- DAO 대신 매퍼인터페이스를 사용하는 경우, 
      namespace 속성에 패키지이름이 포함된 인터페이스이름을 설정합니다-->
<mapper namespace="com.leedohwan.todolist.mapper.ToDoMapper">


<resultMap type="java.util.HashMap" id="toDoMap">
	<result property="todo_id" column="todo_id" />
	<result property="username" column="username" />
	<result property="description" column="description" />
	<result property="done" column="done" />
	<result property="targetDate" column="targetDate" />
</resultMap>


<!-- <select id="retrieveToDoListByUsername" resultMap="toDoMap"> -->
<select id="retrieveToDoListByUsername" resultType="com.leedohwan.todolist.model.ToDo">
	select
	    *
	from
	    todo
	where 
		username = #{username}
</select>

<!-- <select id="retrieveToDoListByUsernameAndId" resultMap="toDoMap"> -->
<select id="retrieveToDoListByUsernameAndId" resultType="com.leedohwan.todolist.model.ToDo">
	select
	    *
	from
	    todo
	where 
	    username = #{username}
	    and todo_id = #{todo_id}
</select>



</mapper>